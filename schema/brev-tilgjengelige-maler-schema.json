{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://melosys.nav.no/schemas/brev-tilgjengelige-maler.json",
  "title": "The Root Schema",
  "additionalProperties": false,
  "type": "array",
  "default": [],
  "items":{
    "$id": "#root/items",
    "title": "Items",
    "type": "object",
    "required": [
      "type",
      "beskrivelse",
      "felter",
      "muligeMottakere"
    ],
    "properties": {
      "type": {
        "$id": "#root/items/type",
        "title": "Type",
        "type": "object",
        "required": [
          "kode",
          "term"
        ],
        "properties": {
          "kode": {
            "title": "Kode",
            "type": "string",
            "default": "",
            "examples": [
              "MELDING_FORVENTET_SAKSBEHANDLINGSTID_SOKNAD"
            ],
            "pattern": "^.*$"
          },
          "term": {
            "title": "Term",
            "type": "string",
            "default": "",
            "examples": [
              "Melding om forventet saksbehandlingstid av søknad"
            ],
            "pattern": "^.*$"
          }
        }
      },
      "beskrivelse": {
        "title": "Beskrivelse",
        "type": "string",
        "default": "",
        "examples": [
          "Melding om forventet saksbehandlingstid av søknad"
        ],
        "pattern": "^.*$"
      },
      "felter": {
        "title": "Felter",
        "type": ["array", "null"],
        "default": [],
        "items":{
          "title": "Items",
          "type": "object",
          "required": [
            "kode",
            "beskrivelse",
            "feltType",
            "hjelpetekst",
            "paakrevd",
            "valg"
          ],
          "properties": {
            "kode": {
              "title": "Kode",
              "type": "string",
              "examples": [
                "INNLEDNING_FRITEKST",
                "MANGLER_FRITEKST"
              ],
              "pattern": "^.*$"
            },
            "beskrivelse": {
              "title": "Beskrivelse",
              "type": "string",
              "pattern": "^.*$"
            },
            "feltType": {
              "title": "feltType",
              "type": "string",
              "pattern": "^.*$",
              "examples": [
                "FRITEKST"
              ]
            },
            "hjelpetekst": {
              "title": "Hjelpetekst",
              "type": "string",
              "pattern": "^.*$"
            },
            "paakrevd": {
              "title": "Paakrevd",
              "type": "boolean"
            },
            "valg": {
              "title": "valg",
              "type": ["array", "null"],
              "default": []
            }
          }
        }
      },
      "muligeMottakere": {
        "title": "Muligemottakere",
        "type": "array",
        "default": [],
        "items":{
          "title": "Items",
          "type": "object",
          "required": [
            "type",
            "rolle"
          ],
          "properties": {
            "type": {
              "title": "Type",
              "type": "string",
              "default": "",
              "examples": [
                "Bruker eller brukers fullmektig"
              ],
              "pattern": "^.*$"
            },
            "rolle": {
              "title": "Rolle",
              "type": "string",
              "examples": [
                "BRUKER",
                "ARBEIDSGIVER"
              ],
              "pattern": "^.*$"
            }
          }
        }
      }
    }
  }

}
